  <!-- Tipo Usuario -->
   <h1>Administrador</h1>

  <!-- Botón colapsable -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- links -->
  <div class="collapse navbar-collapse alinearDerecha" id="collapsibleNavbar">
    <ul class="navbar-nav">
      <li class="nav-item">
          <a class="nav-link " href="../Users">Usuarios</a>
      </li>
      <li class="nav-item">
          <a class="nav-link " href="../Posts">Posteos</a>
      </li>
      <li class="nav-item">
          <a class="nav-link active" href="../Tags">Tags</a>
      </li> 
      <li class="nav-item">
