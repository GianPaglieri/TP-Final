@model IEnumerable<PaginaRedSocial.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}
<header>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
        <!-- Tipo Usuario -->
        <h1>Administrador</h1>

        <!-- Botón colapsable -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- links -->
        <div class="collapse navbar-collapse alinearDerecha" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link " href="../Users">Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="../Posts">Posteos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="../Tags">Tags</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="../Comentarios">Comentarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link aling-text-right" href="/Logout">Cerrar sesion</a>
                </li>

            </ul>
        </div>
    </nav>

</header>

<h2>Comentarios Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contenido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contenido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
