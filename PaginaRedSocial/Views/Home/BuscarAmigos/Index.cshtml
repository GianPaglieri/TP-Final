@model IEnumerable<PaginaRedSocial.Models.User>

@{
    ViewData["Title"] = "Buscar Amigos Page";
}

<head>
    <style>
        body{
            flex: 1;
            height: 100% !important;
            width: 100% !important;
            background-color:#F2F2F2;
        }

        .user-container{
            width: 500px;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .separation{
            margin-top: 10px !important;
            border-bottom: 1px solid #d4d4d4;
            width: 400px;
            display: block;
            margin: auto;
        }

        .profile-image-user {
            width: 75px;
            height: 75px;
            border-radius: 15px;
        }

        .user-name{
            font-weight: 600;
            padding-left: 10px;
        }

        .add-friend-btn-container{
            display: flex;
            align-items: center;
        }
        .add-friend-btn {
            outline: none;
            padding: 5px;
            background-color: #2374e1;
            height: 36px;
            width: 200px;
            color: #FFF;
            font-size: 16px;
            font-weight: bold;
            border-radius: 10px;
            border: 1px solid #2374e1;
            text-align: center;
            text-decoration: none;
        }

        .add-friend-btn:hover {
            background-color: #3982ff;
            border: 1px solid #3982ff;
            color: #FFF;
        }

    </style>
</head>

<body>
    Buscar AMigos

    <section id="users-section">
        @foreach (var item in Model)
        {
            <div style="width: 500px;
            margin-bottom: 20px;">
                <div class="user-container">
                    <div>
                        <img class="profile-image-user" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" />
                        <span class="user-name">@Html.DisplayFor(modelItem => item.Nombre)</span>
                    </div>
                    <div class="add-friend-btn-container">
                        <a class="add-friend-btn" asp-controller="Users" asp-route-id="@item.Id" asp-action="AgregarAmigo">
                            Añadir a mis amigos
                        </a>
                    </div>
                </div>
                <div class="separation"></div>
            </div>
        }
    </section>

</body>